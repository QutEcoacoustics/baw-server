#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file:

  puts '== Installing dependencies =='
  system 'gem install bundler --conservative --no-ri --no-rdoc'
  system 'bundle check || bundle install'

  puts "\n== Removing logs, tempfiles, docs, and test results =="
  system 'rm -f log/*'
  system 'rm -rf tmp/*'
  system 'rm -rf coverage'
  system 'rm -rf doc'

  puts "\n== Creating files for deploying website =="
  system 'bundle exec cap install'

  puts "\n== Manual Setup =="
  puts '1. Create config/settings/development.yml and config/settings/test.yml based on config/settings/default.yml'
  puts '2. Install and configure Postgresql'
  puts '3. Prepare the local development database:`bin/rake db:setup RAILS_ENV=development`'
  puts '4. Prepare the local test database:`bin/rake db:setup RAILS_ENV=test`'
  puts '5. Run rspec tests: `bin/rspec --format progress --color` or for development work start guard: `bundle exec guard`'
  puts '6. Generate API documentation: `bin/rake docs:generate GENERATE_DOC=true`'
  puts '7. Start development server: `thin start`'
  puts '8. Use Capistrano to deploy app (see https://github.com/capistrano/capistrano )'
  puts '9. Create production settings file config/settings/production.yml based on config/settings/default.yml'

end
