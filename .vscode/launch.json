    "version": "0.2.0",
    "configurations": [
      {
        "name": "RSpec - all",
        "type": "Ruby",
        "request": "launch",
        "program": "${workspaceRoot}/bin/rspec",
        "args": [
          "-I",
          "${workspaceRoot}"
        ],
        "env": {
          "RAILS_ENV":"test"
        }
      },
      {
        "name": "RSpec - active spec file only",
        "type": "Ruby",
        "request": "launch",
        "program": "${workspaceRoot}/bin/rspec",
        "args": [
          "-I",
          "${workspaceRoot}",
          "${file}"
        ],
        "env": {
          "RAILS_ENV":"test"
        }
      },
      {
        "name": "Rails server",
        "type": "Ruby",
        "request": "launch",
        "program": "${workspaceRoot}/bin/rails",
        "args": [
          "server"
        ],
        "env": {
          "RAILS_ENV":"development"
        }
      },
      {
        "name": "Listen for rdebug-ide",
        "type": "Ruby",
        "request": "attach",
        "remoteHost": "127.0.0.1",
        "remotePort": "1234",
        "remoteWorkspaceRoot": "${workspaceRoot}",
        "cwd": "${workspaceRoot}"
      },
    ]
}
