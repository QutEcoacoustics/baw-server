= image_tag @user.image.url(:span3), class: 'span3'

.span9
  %h1= @user.user_name

.span12
  %h3 Bookmarks

  %table.table.table-striped(data-provides='rowlink')

    %tr
      %th Audio recording
      %th Name
      %th Notes

    - @user.bookmarks.each do |bookmark|
      %tr
        %td= link_to "AudioRecording #{bookmark.audio_recording_id} - #{bookmark.offset_seconds} sec", bookmark
        %td= bookmark.name
        %td= bookmark.notes

- content_for :left_sidebar do
  = render layout: '/shared/left_sidebar', locals: {title: 'User Accounts'} do
    - if can? :edit, @user
      %li= link_to 'Edit', edit_user_account_path(@user)
    - if can? :index, User
      %li= link_to 'List', user_accounts_path

